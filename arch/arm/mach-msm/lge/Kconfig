config LGE_LCD_UNDERRUN
bool "lcd_underrun"
   default n
   depends on MACH_LGE
   help
       Show bus clock when underrun occurs.

config LGE_LCD_UNDERRUN
     bool "lcd_underrun"
	 default n
	 depends on MACH_LGE
	 help
		Show bus clock when underrun occurs.

config LGE_BITE_RESET
	tristate "Disable PS_HOLD reset"
	default n
	depends on MACH_LGE
	help
		Reset device by WDT BITE instead of PS_HOLD

config LGE_BNR_RECOVERY_REBOOT
	bool "Support PC suite BNR recovery reboot"
	default y
	depends on MACH_LGE
	help
		Support PC suite BNR recovery reboot. bnr recovery mode
		could be entered with reboot --bnr_recovery cmd.
endmenu
