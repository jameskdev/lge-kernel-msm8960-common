config MACH_LGE
	bool

menu "LGE Board Selection"
source "arch/arm/mach-msm/lge/Kconfig.board"
endmenu


menu "LGE Specific Patches"

config EARJACK_DEBUGGER
	bool "Earjack UART debugger support"
	depends on MACH_APQ8064_MAKO
	default n
	help
	  Saying Y here will support earjack type UART debugger cable

config LGE_CRASH_HANDLER
	tristate "Support LGE Crash Handler"
	depends on !S390 && !UML && HAVE_MEMBLOCK && MSM_DLOAD_MODE
	select ANDROID_PERSISTENT_RAM
	default n
	help
	  LGE Crash Handler

#rename to LGE_CRASH_HANDLER by qct
#config LGE_HANDLE_PANIC
#    tristate "Support LGE Kernel Panic Handler"
#    default n
#    depends on MACH_LGE
#    help
#    LGE Error handler.

config LGE_HIDDEN_RESET
	tristate "LGE hidden reset"
	default n
	depends on MACH_LGE && LGE_CRASH_HANDLER
	help
	  Enables support for LGE hidden reset. For turn on this feature,
	  "echo 1 > /sys/module/lge_handle_panic/parameters/hreset_enable"
	  or "lge_handle_panic.hreset_enable=1" from cmdline.

config LGE_PERSIST_RAM_START
	hex "LGE persistent ram start address"
	depends on ANDROID_PERSISTENT_RAM
	default 0x88700000

config LGE_PERSIST_TRACE_SIZE
	hex "LGE persistent trace buffer size"
	depends on ANDROID_PERSISTENT_TRACER
	default 0x20000

config LGE_BOOTLOADER_LOG
    tristate "Support LGE bootloader log"
    default n
    depends on MACH_LGE
    help
    LGE bootloader log

config LGE_QFPROM_INTERFACE
	bool "Support qfprom interface"
	default n
	depends on MACH_LGE
	help
	  LGE QFPROM DRIVER.

config LGE_LCD_TUNING
     bool "lcd_tuning"
	 default n
	 depends on MACH_LGE
	 help
		Support LCD tuning.

#rename to UPDATE_LCDC_LUT by qct
